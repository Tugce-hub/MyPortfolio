
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Layout/Index.cshtml";
    var name = "Tuğçe Deniz";
    var profileImage = "/images/profile.jpg"; // wwwroot/images içine ekle
    int totalProjects = 8;
    int internshipMonths = 50;
    int totalSkills =7 ;

    var skills = new List<(string Title, int Value)>
    {
        ("C#", 90),
        ("ASP.NET Core", 85),
        ("SQL", 80),
        ("JavaScript", 70),
        ("Python", 60),
        ("React",50),
        ("Html,CSS",75)
    };
}

<style>
    .dashboard-container {
        max-width: 1000px;
        margin: auto;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #f0f4f8, #d9e2ec);
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }
    .welcome-section {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 40px;
    }
    .welcome-section img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        box-shadow: 0 0 10px rgba(0,0,0,0.15);
    }
    .welcome-section h1 {
        font-weight: 700;
        font-size: 2.5rem;
        color: #333;
    }
    .stats-cards {
        display: flex;
        gap: 25px;
        justify-content: space-between;
        margin-bottom: 40px;
    }
    .card {
        background: white;
        flex: 1;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.07);
        text-align: center;
        font-weight: 600;
        color: #444;
        transition: transform 0.3s ease;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0,0,0,0.15);
    }
    .card h2 {
        font-size: 2.8rem;
        margin-bottom: 5px;
        color: #2c3e50;
    }
    .card p {
        font-size: 1.1rem;
        color: #7f8c8d;
    }
    .skills-section h3 {
        margin-bottom: 20px;
        color: #34495e;
        font-weight: 700;
        font-size: 1.6rem;
    }
    .skill-bar {
        margin-bottom: 15px;
    }
    .skill-bar .skill-title {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 5px;
    }
    .skill-bar .progress {
        height: 18px;
        border-radius: 10px;
        overflow: hidden;
        background-color: #ecf0f1;
    }
    .skill-bar .progress .progress-fill {
        height: 100%;
        background-color: #3498db;
        text-align: right;
        padding-right: 8px;
        color: white;
        font-weight: 600;
        line-height: 18px;
        border-radius: 10px 0 0 10px;
        transition: width 1s ease-in-out;
    }
</style>
<div class="dashboard-container" style="padding-top: 80px;">
<div class="dashboard-container">
        <section class="welcome-section">
            <h1>Hoşgeldin, @name!</h1>
        </section>


    <section class="stats-cards">
        <div class="card">
            <h2>@totalProjects</h2>
            <p>Toplam Proje</p>
        </div>
        <div class="card">
            <h2>@internshipMonths</h2>
            <p>Staj Süresi (Gün)</p>
        </div>
        <div class="card">
            <h2>@totalSkills</h2>
            <p>Yetenek Sayısı</p>
        </div>
    </section>

    <section class="skills-section">
        <h3>Öne Çıkan Yetenekler</h3>
        @foreach (var skill in skills)
        {
            <div class="skill-bar">
                <div class="skill-title">@skill.Title</div>
                <div class="progress">
                    <div class="progress-fill" style="width:@skill.Value%;">@skill.Value%</div>
                </div>
            </div>
        }
    </section>
</div>



