
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h1>Index</h1>

<div class="container mt-4">
    <h2>Hakkımda</h2>

    <form asp-action="Update" method="post">
        <div class="form-group">
            <label for="content">Metin</label>
            <textarea class="form-control" id="content" name="content" rows="12">@ViewBag.About</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Düzenle / Kaydet</button>
    </form>

    <form asp-action="Delete" method="post" class="mt-2">
        <button type="submit" class="btn btn-danger">Sil</button>
    </form>
</div>
